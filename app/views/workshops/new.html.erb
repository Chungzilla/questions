<h1>Create New Workshop</h1>

<%= form_for @workshop do |f|%>
    <div class="form-group"> 
        <label for="name">Workshop Name:</label>
        <%= f.text_field :name %>
    </div>

    <div class="form-group"> 
    <label for="facilitator">Facilitator:</label> 
    <%= f.select :facilitator_id, Facilitator.all.map{|x|[x.first_name, x.id]} %>
</div>

    <div> <%= f.button :submit %> </div>
<% end %>

<%= link_to 'Workshops', workshops_path %> 
